# Discord webhook（秘密：.envに入れて、Gitに上げない）
DISCORD_WEBHOOK="https://discord.com/api/webhooks/xxxx/xxxx"

# 監視対象[200~nano /home/user/node-ops-template/.env~コンテナ名
CONTAINER_NAME="test-nginx"

# しきい値
DISK_THRESHOLD=80
MEM_THRESHOLD_MB=500

# ログでアラートするパターン（nginx練習用なら error を入れると鳴り続けるので注意）
LOG_PATTERN="panic|oom|fatal|segfault|timeout|stuck|no peers"

# RPC (同期チェック用) ポート
RPC_PORT=8888
